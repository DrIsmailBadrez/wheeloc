<div class="container d-flex justify-content-around flex-wrap">
  <% @myoffers.each do |offer| %>
  <a href="<%= offer_path(offer)%>" class="text-decoration-none link-dark">
      <div class="card col-7 mt-3 rounded ">
        <%= cl_image_tag offer.photo.key, style:" object-fit: cover; width=300", src:"https://cdn.motor1.com/images/mgl/VOZP7/s1/2015-611715hamann-porsche-macan-s-diesel1.jpg", alt:"Card image cap"%>
        <div class="card-body">
          <div class="h-50 mb-3">
            <h3><%= offer.title%></h3>
              <%= offer.description.truncate(100)%>
          </div>
          <div class="d-flex justify-content-between">
            <small class="card__tag"><%= offer.address%></small>

          </div>
          <div class="text-center">
          </div>
      </div>
      </a>
    </div>
  <% end %>
</div>
<br>
