<div class="cardshow">
  <img style="height:77vh"src="https://i.ibb.co/B2HTzRM/vecteezy-online-news-content-headlines-news-update-news-website-6006687.jpg" ;style="height:110vh;" ; alt="">
   <main class="card__content">
   <h3 class="mt-2">Create a new article</h3>
   <br>
      <%= simple_form_for(@offer) do |f| %>
          <div class="form-inputs">
            <%= f.input :title, label: false, input_html: { placeholder:"Title", class: "bg-white" } %>
            <%= f.input :description, label: false, input_html: { placeholder:"Article", class: "bg-white " } %>
            <%= f.input :address,label: false,input_html: { placeholder:"City",class: "bg-white " } %>
            <%= f.input :photo, as: :file, input_html: { class: "bg-white " } %>
            <div class="text-center">
            <br>
              <%= f.submit "Create article", class: "btn btn-success text-white text-align-center rounded" %>
            </div>
          </div>
        <% end %>




    </div>
   </main>
</div>
