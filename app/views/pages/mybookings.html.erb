<div class="card-category" style="height:30vh ;background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://peninsulawealth.co.uk/wp-content/uploads/2018/11/Car-purchase-7713362_m.jpg)">
  <h1>My Bookings</h1>
</div>
<br>
<% if @mybookings.empty? %>
  <h2 class="text-center">You have no bookings...</h2>
<% else %>
  <h2 class="text-center">Check all your bookings...</h2>
<% end %>

<br>
<div class="container d-flex justify-content-center">
  <% @mybookings.each do |booking| %>
      <div class="col-3 border m-3 bg-light p-3">
        <div class="d-flex justify-content-between pb-2 border-bottom">
          <h6 class="mt-1">Booking NÂ°: <%= booking.id %></h6>
          <div class="text-end">
            <% if booking.buyer == current_user %>
              <a class="" href="<%=edit_booking_path(booking)%>"><i class="fa-solid fa-pen-to-square"></i></a>
              <a class="text-danger" data-turbo-method="delete" data-turbo-confirm="Are you sure?" href="<%=booking_path(booking)%>"><i class="fa-solid fa-trash-can"></i></a>
            <% end %>
          </div>
          </div>
        <p><b>Offer:</b> <%= booking.offer.title %></p>
        <p><b>From:</b> <%= booking.begin_date %></p>
        <p><b>To:</b> <%= booking.end_date %></p>
      </div>
  <% end %>
  </div>
</div>

<div class="d-flex justify-content-center m-3">
  <a href="/offers"><button type="button" class="btn btn-dark text-white">Book a new offer</button></a>
</div>
