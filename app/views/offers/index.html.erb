<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://peninsulawealth.co.uk/wp-content/uploads/2018/11/Car-purchase-7713362_m.jpg)">
  <h1>Offers</h1>
</div>
<br>
  <h2 class="text-center">Browse interesting offers...</h2>

<br>


<div class="container d-flex justify-content-around flex-wrap">
  <% @offers.each do |offer| %>
      <div class="card col-4 m-2 rounded">
        <%= cl_image_tag offer.photo.key, class:"card-img-top", style:" object-fit: cover; height: 16rem;", alt:"Card image cap"%>
        <div class="card-body">
          <div class="h-50 mb-3">
            <h3><%= offer.title.truncate(30)%></h3>
              <%= offer.description.truncate(120)%>
          </div>
          <div class="d-flex justify-content-between">
            <p>Price: <%= offer.price%>$ / day</p>
            <h6><i class="fa-solid fa-location-dot"></i> <%= offer.address%></h6>
          </div>
          <div class="text-center">
            <%= link_to "Show this offer", offer, class:"btn btn-dark mb-3" %>
          </div>
      </div>
    </div>
  <% end %>
</div>



<div class="d-flex justify-content-center m-3">
  <a href="/offers/new"><button type="button" class="btn btn-dark text-white">Create a new Offer</button></a>
</div>
