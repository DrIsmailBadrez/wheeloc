<h1 class="text-center m-3">Edit this booking:</h1>
<div class="row d-flex justify-content-center">
      <div class="card col-4 m-1 rounded p-0">
        <%= cl_image_tag @offer.photo.key,  class:"card-img-top", style:"object-fit: cover; height: 16rem;",  alt:"Card image cap"%>
        <div class="card-body m-2">
          <div class="h-50 mb-3">
            <h3><%= @offer.title.truncate(30)%></h3>
              <%= @offer.description.truncate(120)%>
          </div>
          <div class="d-flex justify-content-between">
            <p>Price: <%= @offer.price%>$ / day</p>
            <h6><i class="fa-solid fa-location-dot"></i> <%= @offer.address%></h6>
          </div>
          <div class="text-center">
            <%= link_to "Back to the offer", offer_path(@offer), class:"btn btn-dark m-2" %>
          </div>
        </div>
      </div>
  <div class="w-50 d-flex align-items-center">
    <div class=" container border p-4 bg-white rounded w-75" >
      <%= simple_form_for [@booking] do |f| %>
        <div class="form-inputs">
          <%= f.input :begin_date %>
          <%= f.input :end_date %>
          <div class="text-center">
            <%= f.submit "Modify booking", class: "btn btn-dark text-white" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
