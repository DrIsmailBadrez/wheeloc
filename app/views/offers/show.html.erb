<div class="text-center m-3">
<%= link_to "Return to all the articles", offers_path, class: "link-dark" %>
</div>
 <div class="cardshow">
   <%= cl_image_tag @offer.photo.key,  style:" object-fit: cover; height: 30rem; width: 100%", alt:"Card image cap"%>
   <main class="card__content">


      <h1><%= @offer.title %></h1>

    <div class="p-2" data-controller="sweetalert" data-sweetalert-url-value="<%=  offer_path(@offer)%>" >
      <% if @offer.seller == current_user %>
        <a class="" href="<%=edit_offer_path(@offer)%>"><i class="fa-solid fa-pen-to-square"></i></a>
        <a class="text-danger"
        id= "delete"
        data-action="sweetalert#delete"
        data-sweetalert-target="delete"><i class="fa-solid fa-trash-can"></i></a>
      <% end %>
    </div>

      <span class="card__date "><%= @offer.address %></span>
      <p><%= @offer.description %></p>
      <br>

   </main>
</div>
